<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPasswordText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:hint="Password"/>
    <Button
            android:text="Log in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/loginButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/editPasswordText"
            android:layout_marginTop="60dp" android:textAllCaps="true"/>
    <TextView
            android:text="Don't have a login yet? Sign up now!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewSignUp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="30dp"
            android:clickable="true" android:focusable="true" android:autoLink="all"
            android:minHeight="48dp"/>
    <ImageButton
            android:scaleType="fitCenter"
            android:layout_width="34dp"
            android:layout_height="34dp" app:srcCompat="@drawable/outline_remove_red_eye_24"
            android:id="@+id/seePasswordButton"
            android:background="@android:color/transparent" app:layout_constraintEnd_toEndOf="@+id/editPasswordText"
            app:layout_constraintTop_toTopOf="@+id/editPasswordText" android:layout_marginTop="4dp"
            android:tint="#FFFFFF"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTextEmailAddress2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editPasswordText" android:layout_marginBottom="20dp"
            android:hint="Email"/>
    <TextView
            android:text="Forgot your password? Reset by email here!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewPasswordReset"
            app:layout_constraintBottom_toTopOf="@+id/textViewSignUp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>