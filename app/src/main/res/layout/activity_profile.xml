<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity">

    <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@drawable/user_icon_svgrepo_com"
            android:id="@+id/profileImageButton" android:backgroundTint="@android:color/transparent"
            android:padding="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:scaleType="fitCenter"/>
    <TextView
            android:text="Welcome,\nUSERNAME" android:textSize="32sp"
            android:layout_width="wrap_content" android:textColor="@color/white"
            android:layout_height="wrap_content" android:id="@+id/usernameText"
            app:layout_constraintStart_toEndOf="@+id/profileImageButton"
            app:layout_constraintTop_toTopOf="@+id/profileImageButton"
            app:layout_constraintBottom_toBottomOf="@+id/profileImageButton" android:layout_marginStart="30dp"/>
    <TextView
            android:text="Account settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/profileImageButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"/>
    <Button
            android:text="Log out"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonLogOut"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@android:color/transparent" android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="8dp"
            app:icon="@drawable/log_out_svgrepo_com" app:iconTint="#FFFFFF" android:insetTop="0dp"
            android:insetBottom="0dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Change username"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/changeName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@android:color/transparent" android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/buttonLogOut"
            app:icon="@drawable/edit_svgrepo_com" app:iconTint="#FFFFFF" android:insetTop="0dp"
            android:insetBottom="0dp"/>
    <Button
            android:text="Change profile image"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/setProfileImage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@android:color/transparent" android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/changeName"
            app:icon="@drawable/change_camera_basic_svgrepo_com" app:iconTint="#FFFFFF" android:insetTop="0dp"
            android:insetBottom="0dp"/>
    <Button
            android:text="Remove profile image"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/removeProfileImage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@android:color/transparent" android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/setProfileImage"
            app:icon="@drawable/remove_photo_svgrepo_com" app:iconTint="#FFFFFF" android:insetTop="0dp"
            android:insetBottom="0dp" />
    <Button
            android:text="Delete account"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/deleteAccountButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@android:color/transparent" android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/removeProfileImage"
            app:icon="@drawable/user_delete_svgrepo_com" app:iconTint="#FFFFFF" android:insetTop="0dp"
            android:insetBottom="0dp" />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/outline_arrow_back_24"
            android:id="@+id/backButton"
            app:layout_constraintTop_toTopOf="@+id/usernameText" app:layout_constraintEnd_toEndOf="parent"
            android:rotation="180" android:backgroundTint="@android:color/transparent"/>
</androidx.constraintlayout.widget.ConstraintLayout>